{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Panier</h1>

{% if cart is not empty %}

<table class="table">
    <thead>
        <tr>
            <th>Produit</th>
            <th>Quantit√©</th>
            <th>Prix</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {% for item in cart %}
            <tr>
                <td>{{ item.product.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.price }}</td>
                <td>{{ item.total }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<h2>Total : {{ total }}</h2>

<a href="{{ path('app_checkout') }}" class="btn btn-primary">Payer</a>

{% else %}

<p>Votre panier est vide.</p>

{% endif %}

{% endblock %}
